//- extend the base email 
extends baseEmail

block content
    //- email CONTENT
    h5 Hi #{firstName} #{lastName},
    p We have the following notification for you:
    p #{data.description}
    //- Button for user to access the application
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Go to ABC University Educational System
    p Kindly Regards.
    p - ABC University
//create cards
mixin cardDisplayItems(type, title, author, date, link,  button, description)
    .card
        .card-header.bg-info.text-white= type
        .card-body
            .card-title= title 
            .card-subtitle.mb-2
                small.text-muted= `${author} | Created At:  ${date}`
            -if(description)
                p.card-text
                    small= description
            -if(button)
                a.btn.btn-primary(href= link)= `Go to ${button}`
            
//Breadcrump in pages
mixin breadcrumbDisplay(arrayBreadcrumb)
    nav(aria-label='breadcrumb')
        ol.breadcrumb
            -let size=arrayBreadcrumb.length;
            each element, index in arrayBreadcrumb
                -if (index == size- 1)
                    li.breadcrumb-item.active(aria-current='page')= element[0]
                -else
                    li.breadcrumb-item
                        a(href= element[1])= element[0]
                        
// Dinamic Table rows
mixin tableRowsDisplay(index, type, name, author, date)
    tr
        th(scope='row')= index
        td= type
        td= name
        td= author
        td= date
        td
            a.btn.btn-success.text-white Edit
        td
            a.btn.btn-danger.text-white Delete
                        


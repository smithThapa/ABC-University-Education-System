extends ../components/_templateBase

block append head
    link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css")
    link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css")
    

block append scripts
    script(src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js')
    script(src='/js/databaseDesignJQuerry.js')
           
block content
    +breadcrumbDisplay([['Home','/home'],['Forums']])
    
    h2 Forums
    
    -if(forums.length<1)
        h4.font-weight-bold.text-dark.mt-0.ml-4 No forums in ABC University.
    -else
        table.table#dataTable.table.table-borderless.table-sm
            thead
                tr
                    th.text-right.px-5 Sort By Type
            tbody
                each forum in forums
                    tr
                        td
                            
                            p.d-none #{forum.type}
                            //- -const creationDate = forum.createdAt.format();
                            -const creationDate = moment(forum.createdAt).format('dddd DD MMM YYYY HH:mm');
                            
                            +cardDisplayItems(forum.type, `${forum.title} | Number of topics: ${forum.topics.length}`, `${forum.user.firstName} ${forum.user.lastName}`, creationDate, `/forums/${forum.slug}/topics`, 'Forum')

    

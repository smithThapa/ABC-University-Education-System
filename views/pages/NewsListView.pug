extends ../components/_templateBase

block append head
    link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css")
    link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css")
    

block append scripts
    script(src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js')
    script(src='/js/databaseDesignJQuerry.js')
    script(src='/js/tooltip.js')

block content
    +breadcrumbDisplay([['Home','/home'],['Manage News']])

    .d-flex
        h2 Manage News
        a.btn.btn-primary.text-white.mb-auto.ml-auto(href=`/manage_news/new_news`) + Create News

    -if(news.length<1)
        h4.font-weight-bold.text-dark.mt-0.ml-4 No news to manage.
    - else

        table.table#dataTable.table.table-striped.table-bordered.table-sm.text-center
            thead
                tr
                    //- th #
                    th Title
                    th Author
                    th Creation date
                    th Edit
                    th Delete
            
            tbody
                each newElement in news
                    //- modal to delete element
                    +deleteModalTemplate(newElement.id, title, newElement.title)
                    //- -const creationDate = forum.createdAt.format();
                    -const creationDate = moment(newElement.createdAt).format('DD/MMM/YYYY HH:mm');
                    
                        tr
                            //- th= index+1 
                            td.text-left.pl-3
                                a.btn(type='button' data-toggle="tooltip" data-html="true" data-placement="right" title=`<u>Description</u>: ${newElement.description.substring(0,150)}...`) #{newElement.title}
                            if newElement.user.firstName
                                td #{newElement.user.firstName} #{newElement.user.lastName}
                            else
                                td ABC University
                            td= creationDate
                            td
                                a.btn.btn-success.text-white(href=`/manage_news/${newElement.slug}/edit_news`) Edit
                            td
                                a.btn.btn-danger.text-white(type='button' data-toggle="modal" data-target=`#deleteModal${newElement.id}`) Delete
            tfoot
                tr
                    //- th #
                    th Title
                    th Author
                    th Creation date
                    th Edit
                    th Delete
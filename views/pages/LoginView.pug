//- extend template
extends ../components/_noBarsTemplateBase

block noBarsContent
    .card.card-login.mx-auto.my-5
        .card-header.d-inline-flex.justify-content-center.text-white
            img(src='/img/ABC_ICON_NAVBAR.svg' alt='ABC Logo' width='auto' height='60')
            h3.mt-4 University Login
        .card-body
            //- log in form
            form#login-form
                //- case that the user is for test
                if confirmLogInAs
                    .form-group
                        .form-label-group
                            input#inputEmail.form-control(type='email' placeholder='Email address' required='required' autofocus='autofocus' value= emailAddress readonly)
                            label(for='inputEmail') Email Address for test user
                else
                    .form-group
                        .form-label-group
                            input#inputEmail.form-control(type='email' placeholder='Email address' required='required' autofocus='autofocus')
                            label(for='inputEmail') Email Address
                .form-group
                    .form-label-group
                        input#inputPassword.form-control(type='password' placeholder='Password' required='required', minlength='8')
                        label(for='inputPassword') Password
                //- button to log in
                button.btn.btn-primary.btn-block#submitLogin Log in
            //- link to user who has forgotten their passwords
            .text-center
                a.d-block.small.pt-2(href='/my_details/forgot_password') Forgot Password?
        